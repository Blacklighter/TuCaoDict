<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncreaseSort"
    android:orientation="vertical"

    >

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="20sp"
        android:background="#00000000"
        />

    <Button
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textUri"
        android:background="@mipmap/increasepicture"
        android:layout_gravity="center"
        android:alpha="0.5"
        android:layout_marginTop="60dp"
        ></Button>

    <EditText
        android:id="@+id/sortname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:hint="请输入分类类名"
        android:textColorHint="@color/sortpagetextcolor"
        android:background="@drawable/hot_word_tag_shape"
        android:alpha="0.9">

    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/hot_word_tag_shape"
        android:foreground="#00000000"
        android:layout_gravity="center"
        android:text="提交"
        android:textColorHint="@color/sortpagetextcolor"
        android:textSize="20sp">

    </Button>

</LinearLayout>